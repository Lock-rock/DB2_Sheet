***************************************************Create new tablespace**********************************************
db2 "CREATE BUFFERPOOL BUF_16K
IMMEDIATE
ALL DBPARTITIONNUMS
SIZE AUTOMATIC
NUMBLOCKPAGES 0
PAGESIZE 16K"

db2 commit

CREATE LARGE TABLESPACE DATA1_16K
  IN DATABASE PARTITION GROUP IBMDEFAULTGROUP
  PAGESIZE 16K
  MANAGED BY AUTOMATIC STORAGE
  USING STOGROUP IBMSTOGROUP
  EXTENTSIZE 32
  PREFETCHSIZE AUTOMATIC
  BUFFERPOOL BUF_16K
  OVERHEAD 7.5
  TRANSFERRATE 0.06
  AUTORESIZE YES
  INITIALSIZE 10G
  NO FILE SYSTEM CACHING
  DATA TAG INHERIT"


db2 commit
db2 list tablespace show details
db2 "backup db ITGI tablespace DATA1_16K online"
db2 "reorg table ADMINISTRATOR.KYC_DETAILS"
db2 "RUNSTATS ON TABLE ADMINISTRATOR.KYC_DETAILS ON ALL COLUMNS AND INDEXES ALL ALLOW WRITE ACCESS"


db2 "select tbspace from syscat.tables where tabname='KYC_DETAILS' and tabschema='ADMINISTRATOR'"
db2 "CALL SYSPROC.ADMIN_MOVE_TABLE('ADMINISTRATOR', 'KYC_DETAILS', 'DATA1_16K', 'DATA1_16K', 'DATA1_16K', '', '', '', '', '', 'MOVE')"
db2 "select tbspace from syscat.tables where tabname='KYC_DETAILS' and tabschema='ADMINISTRATOR'"



db2 "describe table ADMINISTRATOR.KYC_DETAILS"
db2 "ALTER TABLE ADMINISTRATOR.KYC_DETAILS ADD COLUMN TW_CREATE_AND_UPLOAD_REMARKS VARCHAR(1000)"
db2 "reorg table ADMINISTRATOR.KYC_DETAILS"
db2 "RUNSTATS ON TABLE ADMINISTRATOR.KYC_DETAILS ON ALL COLUMNS AND INDEXES ALL ALLOW WRITE ACCESS"


#################second_table##############################################################################
db2 "ALTER TABLE ADMINISTRATOR.KYC_DETAILS_DOCUMENT ALTER COLUMN EXPIRY_DATE SET DATATYPE VARCHAR(20)"
db2 "reorg table ADMINISTRATOR.KYC_DETAILS_DOCUMENT"
db2 "RUNSTATS ON TABLE ADMINISTRATOR.KYC_DETAILS_DOCUMENT ON ALL COLUMNS AND INDEXES ALL ALLOW WRITE ACCESS"
